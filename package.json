{
  "name": "express-ioc",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build && nodemon main.ts",
    "build": "rimraf dist && tsc",
    "start": "npx tsc && node dist/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d src/app/config/typeorm.config.ts",
    "migration:new": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/app/data/migrations/migration_$npm_config_name",
    "migration-win:new": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/app/data/migrations/migration_%npm_config_name%",
    "migration:gen": "npm run typeorm -- migration:generate ./src/app/data/migrations/$npm_config_name",
    "migration:gen-win": "npm run typeorm -- migration:generate ./src/app/data/migrations/%npm_config_name%",
    "migrate": "npm run build && npm run typeorm -- migration:run",
    "migrations": "npm run build && npm run typeorm -- migration:show",
    "rollback": "npm run build && npm run typeorm -- migration:revert",
    "rollback:all": "npm run build && ts-node -r tsconfig-paths/register src/app/config/rollback-all.ts",
    "rollback:all:forced": "npm run build && ts-node -r tsconfig-paths/register src/app/config/forced-rollback-all.ts",
    "migration:fake": "npm run typeorm -- migration:run --fake",
    "rollback:fake": "npm run typeorm -- migration:revert --fake",
    "db:reset": "npm run rollback:all && npm run migrate && npm run seed",
    "db:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs db:create --initialDatabase cbt_db -d src/config/typeorm.config.ts",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs db:drop --initialDatabase cbt_db -d src/config/typeorm.config.ts",
    "seed": "npm run build && ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d src/config/typeorm.config.ts",
    "seed:create": "typeorm-extension seed:create -d src/config/typeorm.config.ts"
  },
  "keywords": [],
  "author": "Jerson Pena <jersonsw@outlook.com>",
  "license": "ISC",
  "description": "IoC container for Express",
  "dependencies": {
    "colors": "^1.4.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.7",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm-extension": "^3.6.1",
    "typescript": "^5.5.4"
  }
}
